<div class="row mt-4">
  <% books.forEach(book => { %>
    <div class="col-md-4 mb-4 fade-in">
      <div class="card p-3 h-100">
        <img src="<%= book.cover_url %>" class="card-img-top" alt="Cover">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text"><strong><%= book.author %></strong></p>
          <p><strong>Rating:</strong> <%= book.rating %>/5</p>
          <p><strong>Read on:</strong> <%= new Date(book.read_date).toDateString() %></p>
          <p><%= book.notes %></p>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/books/<%= book.id %>/edit" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Edit
          </a>
          <form action="/books/<%= book.id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>
